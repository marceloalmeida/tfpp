{
  "branches": [
    "main"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "release": "major",
            "breaking": true
          },
          {
            "type": "break",
            "release": "major"
          },
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "docs",
            "release": "patch"
          },
          {
            "type": "chore",
            "release": "patch"
          },
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "test",
            "release": "patch"
          }
        ],
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES",
            "BREAKING"
          ]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "break",
              "section": "üí• Breaking Changes"
            },
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "docs",
              "section": "üìù Documentation"
            },
            {
              "type": "chore",
              "section": "üßπ Chores"
            },
            {
              "type": "refactor",
              "section": "‚ôªÔ∏è Refactors"
            },
            {
              "type": "test",
              "section": "üß™ Tests"
            }
          ]
        },
        "writerOpts": {
          "commitsSort": [
            "subject",
            "scope"
          ]
        }
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": []
      }
    ]
  ]
}
